<Window x:Class="FlightSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulator"
        xmlns:Controls="clr-namespace:FlightSimulator.Views"
        mc:Ignorable="d"
        Title="Main window" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="106*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="603*"/>
            <ColumnDefinition Width="45*"/>
        </Grid.ColumnDefinitions>

        <TabControl Grid.ColumnSpan="2" Height="450" Width="400"
                    VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Column="2" Margin="0,0,0.333,-0.333">
            <TabItem Header="Manual">
                <Controls:Joystick Loaded="Joystick_Loaded" Margin="-186,-200,-215,-200">
                </Controls:Joystick>
            </TabItem>
            <TabItem Header="Auto Pilot">
                <Controls:Auto Loaded="Auto_Loaded" Margin="-200">
                </Controls:Auto>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
